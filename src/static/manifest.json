{
  "manifest_version": 2,

  "name": "Locatio",
  "description": "Enhance your property search",
  "version": "1.0",

  "permissions": [
    "activeTab",
    "*://*.trademe.co.nz/*",
    "*://trademe.co.nz/*",
    "*://koordinates.com/services/query/*"
  ],

  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": [
          "*://*.trademe.co.nz/property/*-property-*/auction-*",
          "*://*.trademe.co.nz/Browse/Listing*",
          "*://trademe.co.nz/property/*-property-*/auction-*",
          "*://trademe.co.nz/Browse/Listing*"
        ],
      "js": ["js/app.js"]
    }
  ]
}
