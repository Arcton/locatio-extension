{
  "manifest_version": 2,

  "name": "Locatio",
  "description": "Enhance your property search",
  "version": "1.0",

  "permissions": [
    "activeTab",
    "*://*.trademe.co.nz/property/*"
  ],

  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": [
          "*://*.trademe.co.nz/property/*-property-to-*/auction-*"
        ],
      "js": ["js/app.js"]
    }
  ]
}
